
<div class="container"></div>
 
<div class="title">
<h1>Wendys Hamburger App</h1>

<p>Watch what you eat</p>
</div>


<!-- Pass in data from server.js -->

<ul>
  {{#each burger}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">description:</span> {{this.description
}}</p>
      <p><span class="label">burger:</span> {{this.burger}}</p>

      <button data-id="{{this.id}}" class="delburger">Delete</button>

      <a href="/{{this.id}}">Update this burger</a>
  	</li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger</label>
    <input type="text" id="burger" name="burger">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="1" cols="40"></textarea>
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>


