
<div class="container"></div>
 

<h1>Wendys Hamburger App</h1>

<h3>Watch what you eat</h3>

<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

<form class="create-form">
  <h2>Add a Burger</h2>

  <div class="form-group">
    <label for="burger">Burger</label>
    <input type="text" id="burger" name="burger">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="1" cols="40"></textarea>
  </div>

  <button type="submit">Add Burger</button>
</form>
  </div>
</div>



<!-- Pass in data from server.js -->
<div class="row">
  <div class="col-lg-6 col-md-6 col-xs-10 col-sm-12">
<ul>
  {{#each burgers}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">description:</span> {{this.taste}}</p>
      <p><span class="label">burger:</span> {{this.burger}}</p>


      <button data-id="{{this.id}}" class="delburger">Devour it!</button>

      <a href="/{{this.id}}">Update this burger</a>
  	</li>
  {{/each}}
</ul>
  </div>
</div>


